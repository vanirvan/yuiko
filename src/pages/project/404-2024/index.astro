---
let projectDirectory = 'project/404-2024'

import PaletteIcon from './palette-icon.svg?raw';
---
<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href={`/assets/${projectDirectory}/favicon.ico`}>

  <title>404 Error Page - Hanieh Hamzeh</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Pacifico&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/global.css">
  <style>
    :root {
      --button: #f74962;
      --gradient-primary: #f02328;
      --gradient-secondary: #00800d;
    }

    [data-theme="light"] {
      --background: #fafafa;
      --text-color: black;
    }
    
    [data-theme="dark"] {
      --background: #1b191a;
      --text-color: white;
    }

    * {
      font-family: 'Poppins', sans-serif;
      transition-property: color, background-color, border-color, text-decoration-color, fill, stroke;
      transition-duration: 200ms;
      /* border: 1px solid red; */
    }

    h1, h2, p, span, a {
      color: var(--text-color);
    }

    a {
      text-decoration: none;
    }

    main {
      position: relative;
      width: 100%;
      height: auto;
      min-height: 100svh;
      display: flex;
      flex-direction: column;
      background-color: var(--background);
    }

    section#nav {
      width: 100%;
      height: auto;
    }

    section#nav > div {
      margin: 0 auto 0 auto;
      height: auto;
      padding: 16px 4px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    section#nav > div #logo {
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    section#nav > div #logo img{
      width: 24px;
      height: auto;
    }

    section#nav > div #logo h1 > a {
      font-weight: 500;
    }

    section#nav > div #menu {
      font-weight: 400;
      display: flex;
      align-items: center;
      gap: 2rem;
    }

    section#dragon {
      width: 100%;
    }

    section#dragon > div {
      position: relative;
      width: 100%;
      max-width: 1280px;
      height: auto;
      margin: 0 auto 0 auto;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    section#dragon > div img {
      width: 80%;
      height: auto;
    }

    section#back {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 1rem;
      margin-bottom: 3rem;
    }

    section#back h1, section#back h2 {
      padding: 0;
      margin: 0;
    }

    section#back h1 {
      font-family: 'Noto Sans', sans-serif;
      font-size: 1.25rem;
    }

    section#back h2 {
      font-family: 'Pacifico', cursive;
      font-size: 3rem;
      background-clip: text;
      color: transparent;
      background-image: linear-gradient(to right, var(--gradient-primary), var(--gradient-secondary));
    }

    section#back button {
      background-color: var(--button);
      padding: .5rem 1rem .5rem 1rem;
      border-radius: 999px;
      cursor: pointer;
      font-weight: bold;
      border: 1px solid var(--background);
    }

    button#change-theme {
      position: fixed;
      bottom: 24px;
      right: 24px;
      border-radius: 1rem;
      background-color: var(--button);
      display: flex;
      justify-content: center;
      align-items: center;
      width: 48px;
      aspect-ratio: 1/1;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <main>
    <section id="nav">
      <div>
        <div id="logo">
          <img src={`/assets/${projectDirectory}/Innovibra Studio logo.png`}>
          <h1><a href="#">InnoVibra Studios</a></h1>
        </div>
        <div id="menu">
          <span><a href="#">Home</a></span>
          <span><a href="#">About Us</a></span>
          <span><a href="#">Contact Us</a></span>
        </div>
      </div>
    </section>
    <section id="dragon">
      <div>
        <img src={`/assets/${projectDirectory}/404 2024.png`} >
      </div>
    </section>
    <section id="back">
      <h1>OOPSY , 2023 IS NOT FOUND</h1>
      <h2>HAPPY NEW YEAR</h2>
      <button>PLEASE TRY AGAIN</button>
    </section>
    <button id="change-theme"><Fragment set:html={PaletteIcon} /></button>
  </main>

  <script>
    const changeThemeButton = document.getElementById('change-theme');
    changeThemeButton?.addEventListener('click', () => {
      console.log('button clicked')
      const htmlDataAttribute = document.querySelector("html")?.getAttribute("data-theme")
      const newTheme = htmlDataAttribute === "light" ? "dark" : "light";
      document.querySelector("html")?.setAttribute("data-theme", newTheme);
    })
  </script>
</body>
</html>